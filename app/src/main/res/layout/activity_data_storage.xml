<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".datastorage.DataStorageActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnSavePreference"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SharedPerferences存储数据"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/editText" />

            <Button
                android:id="@+id/btnGetPreference"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SharedPreferences获取数据"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnSavePreference" />

            <Button
                android:id="@+id/btnCreate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="创建数据库"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnGetPreference" />

            <Button
                android:id="@+id/btnAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="添加数据"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnCreate" />

            <Button
                android:id="@+id/btnQuery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="查询数据"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnAdd" />

            <Button
                android:id="@+id/btnUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="更新数据"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnQuery" />

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="删除数据"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnUpdate" />

            <Button
                android:id="@+id/btnProviderAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="provider添加数据"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnDelete" />

            <Button
                android:id="@+id/btnProviderQuery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="provider查询数据"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnProviderAdd" />

            <Button
                android:id="@+id/btnProviderUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="provider更新数据"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnProviderQuery" />

            <Button
                android:id="@+id/btnProviderDelete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="provider删除数据"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnProviderUpdate" />


            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>